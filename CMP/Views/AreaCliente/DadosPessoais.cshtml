@model DadosPerfil
@{
    ViewData["Title"] = "Index";
}

<style>
    .btn-group button {
        background-color: white;
        border: 1px solid whitesmoke;
        color: black;
        padding: 10px 24px;
        cursor: pointer;
        display: block;
        width: 250px;
        font-family: 'Century Gothic';
    }
    .btn-group button:hover {
            background-color: whitesmoke;
    }
    #botao {
        background-color: white;
        font-family: 'Century Gothic';
        border-radius: 8px;
        border: 2px solid #ff01f2;
        padding-right: 1em;
        padding-left: 1em;
        color: black;
        display: block;
        width: 175px;
    }
</style>

<body>
    <div class="text-center" style="color:black; font-family: 'Century Gothic'; background-color:whitesmoke; padding-top: 1em; padding-bottom: 1em; margin-bottom: 20px;">
        <p style="font-size: 40px; "><b><span>ÁREA CLIENTE</span></b></p>
        <p style="font-size: 20px; "><span>Bem-vindo à sua área de cliente, <b>@User.Claims.ElementAt(1).Value</b>!</span></p>
    </div>

    <div class="container">
        <div class="row" style="padding-bottom: 2em;">
            <div class="btn-group">
                <div class="col-md-3">
                    <a asp-action="DadosPessoais"><button style="background-color:whitesmoke"><b>Dados Pessoais</b></button></a>
                    <a asp-action="MinhasEncomendas"><button><b>Minhas Encomendas</b></button></a>
                    <button><b>Meus Produtos</b></button>
                    <button><b>Meus Favoritos</b></button>
                    <button><b>Meus Comentários</b></button>
                    <a asp-action="Mensagens"><button><b>Minhas Mensagens</b></button></a>
                    <button><b>Minhas Avaliações</b></button>
                    <a asp-action="Logout"><button style="color:red"><b>Terminar Sessão</b></button></a>
                </div>
            </div>

            <div class="col-md-9" style="border: 1px solid whitesmoke; padding-bottom:1em">
                <div class="row" style="font-size: 20px; text-align: center">
                    <div class="col-md-12">
                        <center>
                            <img src="~/images/userPhoto.png" width="300" height="250">
                        </center>
                        <p><span><b>Nome: </b> @Model.nome</span></p>
                        <p><span><b>Username: </b> @Model.username</span></p>
                        <p><span><b>Email: </b> @Model.email</span></p>
                        <p><span><b>Produtos Adquiridos: </b> @Model.produtosAdquiridos</span></p>
                        <p><span><b>Compras efetuadas: </b> @Model.comprasEfetuadas</span></p>
                        <br/>
                        <center>
                            <a id="botao" class="button" asp-action="EditarDados" asp-route-id="@User.Claims.ElementAt(2).Value"><b>EDITAR PERFIL</b></a>
                        </center>
                    </div>                   
                </div>
            </div>
        </div>
    </div>
</body>
